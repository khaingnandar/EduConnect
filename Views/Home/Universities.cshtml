@{
    ViewData["Title"] = "Explore Universities";
}
<section class="universities-section mb-12">
<div class="max-w-4xl mx-auto py-6">
    <h2 class="text-3xl font-bold mb-2 text-gray-800">Explore Universities</h2>
    <p class="text-gray-600 mb-6">Discover top universities around the world. Refine your search using filters to find the perfect fit for your academic goals.</p>
    <!-- Search and Filters -->
    <div class="bg-gray-100 rounded-lg p-4 mb-6 flex flex-col gap-3">
        <div class="flex items-center gap-2">
            <span class="material-icons text-gray-400">search</span>
            <input type="text" placeholder="Search for universities" class="flex-1 bg-transparent outline-none px-2 py-1" />
        </div>
        <div class="flex flex-wrap gap-3 mt-2">
            <select class="bg-white border border-gray-300 rounded px-3 py-2 text-sm">
                <option>Location</option>
            </select>
            <select class="bg-white border border-gray-300 rounded px-3 py-2 text-sm">
                <option>Programs</option>
            </select>
            <select class="bg-white border border-gray-300 rounded px-3 py-2 text-sm">
                <option>Admission Criteria</option>
            </select>
        </div>
    </div>
    <!-- Featured Universities -->
    <h2 class="text-xl font-semibold mb-4">Featured Universities</h2>
    <div class="news-events-flex">
        <div class="news-event-info-col">
            <div class="news-event-info-block">
                <h3 class="news-event-title">Stanford University</h3>
                <p class="news-event-desc">Located in the heart of Silicon Valley, Stanford is renowned for its innovation and entrepreneurship programs.</p>
                <button class="view-profile-btn mt-3">View Profile</button>
            </div>
            <div class="news-event-info-block">
                <h3 class="news-event-title">Massachusetts Institute of Technology (MIT)</h3>
                <p class="news-event-desc">MIT is a global leader in science and technology, offering cutting-edge research opportunities.</p>
                <button class="view-profile-btn mt-3">View Profile</button>
            </div>
            <div class="news-event-info-block">
                <h3 class="news-event-title">University of Oxford</h3>
                <p class="news-event-desc">Oxford is one of the oldest universities in the English-speaking world, known for its rich history and academic excellence.</p>
                <button class="view-profile-btn mt-3">View Profile</button>
            </div>
            <div class="news-event-info-block">
                <h3 class="news-event-title">California Institute of Technology (Caltech)</h3>
                <p class="news-event-desc">Caltech is a leading science and engineering institute, known for its rigorous academic environment.</p>
                <button class="view-profile-btn mt-3">View Profile</button>
            </div>
            <div class="news-event-info-block">
                <h3 class="news-event-title">Harvard University</h3>
                <p class="news-event-desc">Harvard is a prestigious Ivy League university with a wide range of academic programs and a strong alumni network.</p>
                <button class="view-profile-btn mt-3">View Profile</button>
            </div>
        </div>
        <div class="news-event-img-col">
            <div class="news-event-img-block">
                <img src="~/images/uni_1.png" alt="Stanford" class="news-event-img" />
            </div>
            <div class="news-event-img-block">
                <img src="~/images/uni_2.png" alt="MIT" class="news-event-img" />
            </div>
            <div class="news-event-img-block">
                <img src="~/images/uni_3.png" alt="Oxford" class="news-event-img" />
            </div>
            <div class="news-event-img-block">
                <img src="~/images/uni_4.png" alt="Caltech" class="news-event-img" />
            </div>
            <div class="news-event-img-block">
                <img src="~/images/uni_5.png" alt="Harvard" class="news-event-img" />
            </div>
        </div>
    </div>
    <!-- Pagination -->
    <div class="flex justify-center items-center gap-2 mt-10">
        <button class="w-8 h-8 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-200">&lt;</button>
        <button class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-200 text-gray-700">1</button>
        <button class="w-8 h-8 flex items-center justify-center rounded-full text-gray-700 hover:bg-gray-200">2</button>
        <button class="w-8 h-8 flex items-center justify-center rounded-full text-gray-700 hover:bg-gray-200">3</button>
        <button class="w-8 h-8 flex items-center justify-center rounded-full text-gray-700 hover:bg-gray-200">4</button>
        <button class="w-8 h-8 flex items-center justify-center rounded-full text-gray-700 hover:bg-gray-200">5</button>
        <button class="w-8 h-8 flex items-center justify-center rounded-full text-gray-400 hover:bg-gray-200">&gt;</button>
    </div>
</div>
</section>
